@model BecoSoftAssignment.Models.ProductDetailViewModel

<ul class="nav nav-tabs" id="productTabs">
    <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#desc">Description</a></li>
    <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#reviews">Reviews</a></li>
    <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#specs">Specifications</a></li>
</ul>

<div class="tab-content border p-3">
    <div class="tab-pane fade show active" id="desc">@Model.Description</div>
    <div class="tab-pane fade" id="reviews">
        @foreach (var review in Model.Reviews)
        {
            <p>
                <strong>@review.Author</strong> 
                @for (int i = 0; i < review.Rating; i++)
                {
                    <i class="fa fa-star text-warning"></i>
                }
                <br />@review.Comment
            </p>
        }
       
    </div>
    <div class="tab-pane fade" id="specs">@Html.Raw(Model.SpecificationsHtml)</div>
</div>
